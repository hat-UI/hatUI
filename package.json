{
  "name": "hat-ui",
  "version": "0.0.1",
  "description": "a UI framework base on the vuejs2.x",
  "main": "./dist/hat.min.js",
  "dependencies": {
    "vue": "^2.5.2",
    "vue-router": "^3.0.1",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "@vue/test-utils": "^1.0.0-beta.32",
    "add-asset-html-webpack-plugin": "^3.1.3",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^7.0.0-beta.3",
    "chalk": "^3.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.1.0",
    "coveralls": "^3.0.2",
    "cross-env": "^7.0.2",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-vue": "^6.2.2",
    "expect": "^25.1.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "happypack": "^5.0.1",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.12.1",
    "istanbul-instrumenter-loader": "3.0.1",
    "jsdom": "^16.2.1",
    "jsdom-global": "^3.0.2",
    "log-symbols": "^3.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-webpack": "2.0.0-beta.0",
    "node-sass": "^4.13.1",
    "nyc": "10.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "ora": "^4.0.3",
    "postcss-loader": "^3.0.0",
    "progress-bar-webpack-plugin": "^2.1.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^3.0.0",
    "vue-loader": "^15.7.1",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "scripts": {
    "dev:demo": "cross-env NODE_ENV=development node ./build/index.js",
    "prod:demo": "cross-env NODE_ENV=production node ./build/index.js",
    "demo:dll": "webpack --progress --config ./build/webpack.demo.dll.js",
    "build": "webpack --progress --config ./build/webpack.prod.conf.js",
    "multiEntry": "webpack --inline --progress --config ./build/webpack.mutilEntry.conf.js",
    "serve": "http-server ./sites/demo/dist",
    "lint": "eslint src/packages/**/*.{js,vue}",
    "test:watch": "npm run test --watch",
    "test": "cross-env NODE_ENV=coverage nyc mocha-webpack --webpack-config build/webpack.test.conf.js --require test/setup.js src/packages/*/__test__/**.spec.js",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "nyc": {
    "include": [
      "src/packages/**/*.vue"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "instrument": false,
    "sourceMap": false
  },
  "keywords": [
    "scaffold",
    "vue"
  ],
  "author": "harhao",
  "license": "MIT"
}
